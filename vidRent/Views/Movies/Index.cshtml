@model vidRent.ViewModels.MoviesIndex

@{
    ViewBag.Title = "Movies";
    //Layout = "_Layout";
}

<h2>Movies</h2>

@if (Model.Movies.Count == 0)
{
    <text> No Movies</text>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Movie Name</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model.Movies)
        {
            <tr> 
                <td>@movie.Name</td> 
            </tr>
        }
        </tbody>
    </table>
}
